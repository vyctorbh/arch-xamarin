<?xml version="1.0" encoding="utf-8" ?>
<BasePage xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Mobile.View.DetailsPage">
  <AbsoluteLayout>
      <Grid>
        <Label Grid.Row="0" Text="{Binding Title}" />
        <Label Grid.Row="1" Text="{Binding Data}" />
      </Grid>
    <WebView VerticalOptions="StartAndExpand" Source="{Binding ContentHtml}" AbsoluteLayout.LayoutFlags="All"
         AbsoluteLayout.LayoutBounds="0.5,0.8,1,1"></WebView>
  </AbsoluteLayout>
</BasePage>